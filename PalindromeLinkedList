# https://leetcode.com/problems/palindrome-linked-list/

# Definition for singly-linked list.
class ListNode:
    def __init__(self, x):
        self.val = x
        self.next = None

class Solution:
    def isPalindrome(self, head: ListNode) -> bool:
        # store the values in a list
        # reverse the list and check if its reverse is same to it

        p1 = head
        if p1 == None:
            return True

        lst = [p1.val]
        while p1.next != None:
            lst.append(p1.next.val)
            p1 = p1.next


        return lst == list(reversed(lst))
